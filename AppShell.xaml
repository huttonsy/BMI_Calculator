<Shell
    x:Class="BMICalculatorMobileApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BMICalculatorMobileApp"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent Route="MainPage" ContentTemplate="{DataTemplate local:MainPage}" />
    <ShellContent Route="BMIResultPage" ContentTemplate="{DataTemplate local:BMIResultPage}" />
    <ShellContent Route="HealthRecommendationsPage" ContentTemplate="{DataTemplate local:HealthRecommendationsPage}" />
</Shell>

